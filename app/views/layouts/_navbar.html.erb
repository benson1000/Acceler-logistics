<section class="ftco-section">
  <div class="wrap">
    <div class="container">
      <div class="row justify-content-between">
        <div class="col">
          <p class="mb-0 phone"> <span class="fa fa-phone" id="phone"></span> <a href="#"> +254 71 234 567</a></p>
        </div>
        <div class="col d-flex justify-content-end">
          <div class="social-media">
            <p class="mb-0 d-flex">
              <a href="#" class="d-flex align-items-center justify-content-center"><span class="fa fa-facebook"><i class="sr-only">Facebook</i></span></a>
				      <a href="#" class="d-flex align-items-center justify-content-center"><span class="fa fa-twitter"><i class="sr-only">Twitter</i></span></a>
				    	<a href="#" class="d-flex align-items-center justify-content-center"><span class="fa fa-instagram"><i class="sr-only">Instagram</i></span></a>
				    	<a href="#" class="d-flex align-items-center justify-content-center"><span class="fa fa-dribbble"><i class="sr-only">Dribbble</i></span></a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
	      <span class="fa fa-bars"></span> Menu
	    </button>
      <div class="collapse navbar-collapse" id="ftco-nav">
        <% if user_signed_in? %>
          <ul class="navbar-nav navbar-right m-auto">

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Orders</a>
              <div class="dropdown-menu" aria-labelledby="dropdown04">
                <%= link_to "Make an Order", new_order_path, class: "dropdown-item" , id: "view" %>
                <%= link_to "Check Order Status", "#", class: "dropdown-item", id: "view" %>
                <%= link_to "Orders History", order_history_path, class: "dropdown-item", id: "view" %>
                <%= link_to "Payment History", "#", class: "dropdown-item", id: "view" %>
                <%= link_to "Cancelled Orders",  cancelled_orders_path, class: "dropdown-item", id: "view" %>
              </div>
            </li>

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-user-circle-o" aria-hidden="true"></i> My profile
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdown04">
                <p><i class="fa fa-envelope"></i>Email: <%= current_user.email %></p>
                <p><i class="fa fa-user-circle"></i> username: <%= current_user.username %></p>
                <%= button_to "Log out", destroy_user_session_path, class: 'btn btn-primary navbar-btn', method: :delete, id: "log" %>
