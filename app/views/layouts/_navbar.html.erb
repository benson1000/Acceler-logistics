          <% end %>
          <ul class="navbar-nav navbar-right m-auto">
            <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Contact", new_contact_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Sign up", new_user_registration_path, method: :get, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Login", new_user_session_path, class: "nav-link", method: :get %></li>
          </ul>
        <% end %>
      </div>

    </div>
